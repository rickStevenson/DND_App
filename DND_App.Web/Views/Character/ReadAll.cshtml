@model List<DND_App.Web.Models.Domain.Character>

@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>All Characters</h1>
    </div>
</div>

<div class="container py-3">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Character Name</th>
                    <th>Player Name</th>
                    <th>Race</th>
                    <th>Class</th>
                    <th>Level</th>
                    <th>Experience Points</th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var character in Model)
                {
                    <tr>
                        <td>@character.CharacterName</td>
                        <td>@character.PlayerName</td>
                        <td>@character.CharacterRace.Name</td>
                        <td>@character.CharacterClass.Name</td>
                        <td>@character.Level</td>
                        <td>@character.ExperiencePoints</td>
                        <td>
                            <a class="btn btn-primary btn-sm"
                               asp-controller="Character"
                               asp-action="Details"
                               asp-route-id="@character.Id">
                                Details
                            </a>
                            <a class="btn btn-warning btn-sm"
                               asp-controller="Character"
                               asp-action="Edit"
                               asp-route-id="@character.Id">
                                Edit
                            </a>
                            <form asp-controller="Character"
                                  asp-action="Delete"
                                  asp-route-id="@character.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                 }
                </tbody>
            </table>
        }
        else
        {
            <p>No characters found!</p>
        }
</div>