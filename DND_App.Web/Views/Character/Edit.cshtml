@model DND_App.Web.Models.ViewModels.EditCharacterRequest
@{
    var skills = ViewBag.Skills as List<DND_App.Web.Models.Domain.Skill>;
    var spells = ViewBag.Spells as List<DND_App.Web.Models.Domain.Spell>;
}

<h2>Edit Character</h2>

<form asp-action="Edit" method="post">
    <div class="container">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label for="CharacterName">Character Name</label>
            <input asp-for="CharacterName" class="form-control" id="CharacterName" />
            <span asp-validation-for="CharacterName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="CharacterClassId">Character Class</label>
            <select asp-for="CharacterClassId" class="form-control" id="CharacterClassId">
                @foreach (var characterClass in ViewBag.Classes)
                {
                    <option value="@characterClass.Id">@characterClass.Name</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label for="CharacterRaceId">Character Race</label>
            <select asp-for="CharacterRaceId" class="form-control" id="CharacterRaceId">
                @foreach (var characterRace in ViewBag.Races)
                {
                    <option value="@characterRace.Id">@characterRace.Name</option>
                }
            </select>
        </div>

        <div>
            <label asp-for="Strength"></label>
            <input asp-for="Strength" />
            <span asp-validation-for="Strength"></span>
        </div>
        <div>
            <label asp-for="Dexterity"></label>
            <input asp-for="Dexterity" />
            <span asp-validation-for="Dexterity"></span>
        </div>
        <div>
            <label asp-for="Constitution"></label>
            <input asp-for="Constitution" />
            <span asp-validation-for="Constitution"></span>
        </div>
        <div>
            <label asp-for="Intelligence"></label>
            <input asp-for="Intelligence" />
            <span asp-validation-for="Intelligence"></span>
        </div>
        <div>
            <label asp-for="Wisdom"></label>
            <input asp-for="Wisdom" />
            <span asp-validation-for="Wisdom"></span>
        </div>
        <div>
            <label asp-for="Charisma"></label>
            <input asp-for="Charisma" />
            <span asp-validation-for="Charisma"></span>
        </div>
        <div>
            <label asp-for="Level"></label>
            <input asp-for="Level" />
            <span asp-validation-for="Level"></span>
        </div>
        <div>
            <label asp-for="ExperiencePoints"></label>
            <input asp-for="ExperiencePoints" />
            <span asp-validation-for="ExperiencePoints"></span>
        </div>
        <div>
            <label asp-for="PassiveWisdom"></label>
            <input asp-for="PassiveWisdom" />
            <span asp-validation-for="PassiveWisdom"></span>
        </div>
        <div>
            <label asp-for="Inspiration"></label>
            <input asp-for="Inspiration" type="checkbox" />
            <span asp-validation-for="Inspiration"></span>
        </div>
        <div>
            <label asp-for="ProficiencyBonus"></label>
            <input asp-for="ProficiencyBonus" />
            <span asp-validation-for="ProficiencyBonus"></span>
        </div>
        <div>
            <label asp-for="ArmorClass"></label>
            <input asp-for="ArmorClass" />
            <span asp-validation-for="ArmorClass"></span>
        </div>
        <div>
            <label asp-for="Speed"></label>
            <input asp-for="Speed" />
            <span asp-validation-for="Speed"></span>
        </div>
        <div>
            <label asp-for="Age"></label>
            <input asp-for="Age" />
            <span asp-validation-for="Age"></span>
        </div>
        <div>
            <label asp-for="Height"></label>
            <input asp-for="Height" />
            <span asp-validation-for="Height"></span>
        </div>
        <div>
            <label asp-for="Weight"></label>
            <input asp-for="Weight" />
            <span asp-validation-for="Weight"></span>
        </div>
        <div>
            <label asp-for="Eyes"></label>
            <input asp-for="Eyes" />
            <span asp-validation-for="Eyes"></span>
        </div>
        <div>
            <label asp-for="Skin"></label>
            <input asp-for="Skin" />
            <span asp-validation-for="Skin"></span>
        </div>
        <div>
            <label asp-for="Hair"></label>
            <input asp-for="Hair" />
            <span asp-validation-for="Hair"></span>
        </div>
        <div>
            <label asp-for="PersonalityTraits"></label>
            <input asp-for="PersonalityTraits" />
            <span asp-validation-for="PersonalityTraits"></span>
        </div>
        <div>
            <label asp-for="Ideals"></label>
            <input asp-for="Ideals" />
            <span asp-validation-for="Ideals"></span>
        </div>
        <div>
            <label asp-for="Bonds"></label>
            <input asp-for="Bonds" />
            <span asp-validation-for="Bonds"></span>
        </div>
        <div>
            <label asp-for="Flaws"></label>
            <input asp-for="Flaws" />
            <span asp-validation-for="Flaws"></span>
        </div>
        <div>
            <label class="form-label">Character Backstory</label>
            <textarea class="form-control" id="characterBackstory" asp-for="CharacterBackstory"></textarea>
            <span asp-validation-for="CharacterBackstory"></span>
        </div>
        <div>
            <label asp-for="Alignment"></label>
            <input asp-for="Alignment" />
            <span asp-validation-for="Alignment"></span>
        </div>
        <div>
            <label asp-for="EncumbranceStatus"></label>
            <input asp-for="EncumbranceStatus" />
            <span asp-validation-for="EncumbranceStatus"></span>
        </div>
        <div>
            <label class="form-label">Gender</label>
            <input type="text" class="form-control" id="gender" asp-for="Gender" />
            <span asp-validation-for="Gender"></span>
        </div>
        <div>
            <label class="form-label">Current Hit Points</label>
            <input type="text" class="form-control" id="hitPoints_Current" asp-for="HitPoints_Current" />
            <span asp-validation-for="HitPoints_Current"></span>
        </div>
        <div>
            <label class="form-label">Total Hit Points</label>
            <input type="text" class="form-control" id="hitPoints_Total" asp-for="HitPoints_Total" />
            <span asp-validation-for="HitPoints_Total"></span>
        </div>
        <div>
            <label class="form-label">Initiative</label>
            <input type="text" class="form-control" id="initiative" asp-for="Initiative" />
            <span asp-validation-for="Initiative"></span>
        </div>
        <div>
            <label class="form-label">TotalWeight</label>
            <input type="text" class="form-control" id="totalWeight" asp-for="TotalWeight" />
            <span asp-validation-for="TotalWeight"></span>
        </div>

        <div>
            <h4>Skills</h4>
            @for (var i = 0; i < Model.CharacterSkills.Count; i++)
            {
                var skill = skills[i];
                var characterSkill = Model.CharacterSkills[i];

                <div class="mb-3">
                    <label class="form-label">@skill.Name (@skill.AlignedAttribute)</label>

                    <!-- Hidden input for SkillId -->
                    <input type="hidden" name="CharacterSkills[@(i)].SkillId" value="@skill.Id" />

                    <!-- Checkbox for IsProficient -->
                    <div class="form-check">
                        <input type="hidden" name="CharacterSkills[@(i)].IsProficient" value="false" />
                        <input class="form-check-input" type="checkbox"
                               id="CharacterSkills_@(i)__IsProficient"
                               name="CharacterSkills[@(i)].IsProficient"
                               value="true"
                               @(characterSkill.IsProficient ? "checked" : "") />
                        <label class="form-check-label" for="CharacterSkills_@(i)__IsProficient">Proficient</label>
                    </div>

                    <!-- Input for Bonus -->
                    <label class="form-label" for="CharacterSkills_@(i)__Bonus">Bonus</label>
                    <input type="number" class="form-control"
                           id="CharacterSkills_@(i)__Bonus"
                           name="CharacterSkills[@(i)].Bonus"
                           value="@characterSkill.Bonus" />
                </div>
            }
        </div>
        
        <div>
            <h4>Spells</h4>
            <h3>Spells</h3>
            @for (var i = 0; i < Model.CharacterSpells.Count; i++)
            {
                var spell = spells[i];
                var characterSpell = Model.CharacterSpells[i];

                <div class="form-check">
                    <input type="hidden" name="CharacterSpells[@(i)].SpellId" value="@spell.SpellId" />
                    <input type="hidden" name="CharacterSpells[@(i)].IsSelected" value="false" />
                    <input class="form-check-input" type="checkbox"
                           id="CharacterSpells_@(i)__IsSelected"
                           name="CharacterSpells[@(i)].IsSelected"
                           value="true"
                           @(characterSpell.IsSelected ? "checked" : "") />
                    <label class="form-check-label" for="CharacterSpells_@(i)__IsSelected">
                        @spell.Name (Level: @spell.Level, School: @spell.School)
                    </label>
                </div>
            }
        </div>

        <!-- Image Upload Section -->
        <div class="mb-3">
            <label class="form-label">Current Character Image</label>
            <img src="@Model.CharacterImage" id="featuredImageDisplay" style="width: 300px; display: block;" alt="Character Image" />
        </div>

        <div class="mb-3">
            <label class="form-label">Upload New Character Image</label>
            <input type="file" id="featuredImageUpload" class="form-control" />
        </div>
        <input type="hidden" asp-for="CharacterImage" id="featuredImageUrl" />

        <div class="d-flex">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <button type="button" class="btn btn-danger ms-2"
                    asp-controller="Character"
                    asp-action="Delete"
                    asp-route-id="@Model.Id">
                Delete
            </button>
        </div>
    </div>
</form>


@section Scripts{
    <script>
        var editor = new FroalaEditor('#characterBackstory', {
            imageUploadURL: '/api/images'
        });

        const featuredUploadElement = document.getElementById('featuredImageUpload');
        const featuredImageUrlElement = document.getElementById('featuredImageUrl');
        const featuredImageDisplayElement = document.getElementById('featuredImageDisplay');

        async function uploadFeaturedImage(e) {
            const file = e.target.files[0];
            if (!file) return;

            const data = new FormData();
            data.append('file', file);

            try {
                const response = await fetch('/api/images', {
                    method: 'POST',
                    body: data
                });

                if (!response.ok) throw new Error('Image upload failed');

                const result = await response.json();
                featuredImageUrlElement.value = result.link;
                featuredImageDisplayElement.src = result.link;
                featuredImageDisplayElement.style.display = 'block';
            } catch (error) {
                console.error('Image upload error:', error);
            }
        }

        featuredUploadElement.addEventListener('change', uploadFeaturedImage);
    </script>
}
