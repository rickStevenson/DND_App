@model DND_App.Web.Models.Domain.CharacterRace

<div class="bg-secondary bg-opacity-10 py-5">
    <div class="container">
        <h1>@Model.Name</h1>
    </div>
</div>
<div class="container py-3">
    <h2>Male and Female Images</h2>
    <div class="row">
        <div class="col-md-6">
            <h3>Male</h3>
            <img src="@Model.MaleImage" alt="@Model.Name Male" class="img-fluid" />
        </div>
        <div class="col-md-6">
            <h3>Female</h3>
            <img src="@Model.FemaleImage" alt="@Model.Name Female" class="img-fluid" />
        </div>
    </div>
    <div class="containter py-3">
        <h2>Description</h2>
        <p>
            @Model.Description
        </p>
    </div>
    <div class="container py-3">
        <h2>Abilities</h2>
        @if (Model.RaceAbilities != null && Model.RaceAbilities.Any())
        {
            <ul>
                @foreach (var ability in Model.RaceAbilities)
                {
                    <li>
                        <strong>@ability.Name:</strong> @ability.Description
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">No abilities available.</p>
        }
    </div>
