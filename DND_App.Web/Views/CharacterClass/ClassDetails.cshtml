@model DND_App.Web.Models.Domain.CharacterClass

<div class="bg-secondary bg-opacity-10 py-3">
    <div class="container">
        <h1>@Model.Name</h1>
    </div>
</div>

<div class="container py-2">
    <h2>Description</h2>
    <p>@Model.Description</p>
</div>

<div class="container py-2">
    <h2>Abilities</h2>
    @if (Model.ClassAbilities != null && Model.ClassAbilities.Any())
    {
        <ul>
            @foreach (var ability in Model.ClassAbilities)
            {
                <li>
                    <strong>@ability.Name:</strong> @ability.Description
                </li>
            }
        </ul>
    }
    else
    {
        <p class="text-muted">No features or abilities available.</p>
    }
</div>
<div class="container py-2">
    <h2>Saving Throws</h2>
    @if (Model.ClassSavingThrows != null && Model.ClassSavingThrows.Any())
    {
        <ul>
            @foreach (var savingThrow in Model.ClassSavingThrows)
            {
                <li>@savingThrow.Name</li>
            }
        </ul>
    }
    else
    {
        <p class="text-muted">No class saving throws available.</p>
    }
</div>
